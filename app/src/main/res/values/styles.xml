<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="AppTheme.Base" />

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/vilibra_teal_primary</item>
        <item name="colorPrimaryDark">@color/vilibra_teal_primary_dark</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="floatingActionButtonStyle">@style/AppTheme.Fab</item>
    </style>

    <style name="AppTheme.Fab" parent="FloatingActionButton">
        <item name="floatingActionButtonColor">@color/vilibra_teal_primary</item>
    </style>

    <style name="AppTheme.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.DropShadowText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:shadowColor">@android:color/darker_gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>
</resources>

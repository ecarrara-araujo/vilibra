<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <ImageView android:id="@+id/book_photo_image_view"
        android:src="@drawable/art_default_book_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:maxHeight="100dp"/>

    <LinearLayout android:id="@+id/book_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/book_photo_image_view"
        android:layout_alignTop="@id/book_photo_image_view"
        android:layout_toRightOf="@id/book_photo_image_view"
        android:background="@drawable/list_item_book_info_background"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp">

        <TextView android:id="@+id/book_name_text_view"
            android:text="Android Recipes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceLarge" />

        <TextView android:id="@+id/book_author_text_view"
            android:text="Fulano, Sicrano, Beltrano"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textAppearance="?android:textAppearanceSmall"/>

    </LinearLayout>

    <br.eng.ecarrara.vilibra.widget.RoundedQuickContactBadge android:id="@+id/contact_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_alignBottom="@id/book_info_container"
        android:layout_alignRight="@id/book_info_container"
        android:layout_margin="8dp"
        android:scaleType="centerCrop" />

</RelativeLayout>
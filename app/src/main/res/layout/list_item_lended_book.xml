<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView android:id="@+id/book_photo_image_view"
        android:background="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:minHeight="200dp"
        android:minWidth="350dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/book_photo_image_view"
        android:layout_alignBottom="@id/book_photo_image_view"
        android:layout_alignRight="@id/book_photo_image_view"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal"
        android:minHeight="50dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="7"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <TextView android:id="@+id/book_name_text_view"
                android:text="Android Recipes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:textAppearanceLarge"/>

            <TextView android:id="@+id/book_author_text_view"
                android:text="Fulano, Sicrano, Beltrano"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:fontFamily="sans-serif"
                android:textAppearance="?android:textAppearanceSmall"/>

        </LinearLayout>

        <ImageView android:id="@+id/lenders_badge_widget"
            android:background="@android:color/holo_green_dark"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

    </LinearLayout>
</RelativeLayout>